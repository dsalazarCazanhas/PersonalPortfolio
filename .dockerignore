# Ignore all files by default
*

# Allow specific files and directories
!package.json
!package-lock.json
!pnpm-lock.yaml
!tsconfig.json
!vite.config.ts
!public/
!src/
!.dockerignore
!Dockerfile

# Exclude development and build artifacts
node_modules/
dist/
build/
.cache/
.temp/
.env
.env.local
.env.development
.env.test
.env.production

# Exclude version control files
.git/
.gitignore
.gitattributes

# Exclude IDE and editor files
.vscode/
.idea/
*.swp
*.swo

# Exclude logs and debug files
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Exclude dependency files (if using Yarn)
yarn.lock
.yarn/
.pnp.*

# Exclude OS-specific files
.DS_Store
Thumbs.db